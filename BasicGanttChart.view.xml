<mvc:View
	controllerName="sap.gantt.sample.BasicGanttChart.BasicGanttChart"
	xmlns="sap.gantt"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:table="sap.ui.table"
	xmlns:m="sap.m"
	height="720px">
	<!--<m:Button type="Default" text="Set TimeAxis" press="onPress" />-->
	<GanttChartContainer id="GanttChartContainer">

		<ganttCharts>
			<GanttChartWithTable id="ganttView" shapeDragEnd="handleShapeDragEnd">
				<columns>
					<table:Column id="nameColumn" label="Name" width="160px">
						<table:template>
								<m:Label text="{test>name}"/>
						</table:template>
					</table:Column>
					<table:Column id="location" label="Location" width="160px">
						<table:template>
							<m:Label placeholder=" " text="{test>order/0/location}"/>
						</table:template>
					</table:Column>
					<table:Column id="startDateColumn" label="Start Date" width="160px">
						<table:template>
							<m:DateTimePicker placeholder=" " value="{test>order/0/startTime}" valueFormat="yyyyMMdd" change="handleDateChange" enabled="false"/>
						</table:template>
					</table:Column>
					<table:Column id="endDateColumn" label="End Date" width="160px">
						<table:template>
							<m:DateTimePicker placeholder=" " value="{test>order/0/endTime}" valueFormat="yyyyMMdd" change="handleDateChange" enabled="false"/>
						</table:template>
					</table:Column>
				</columns>
			</GanttChartWithTable>
		</ganttCharts>

	</GanttChartContainer>
</mvc:View>